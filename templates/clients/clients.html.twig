{% extends 'base.html.twig' %}

{% block title %}Liste de tous les clients
{% endblock %}

{% block body %}

	<h2>Clients</h2>
	<div class="row m-auto text-align-center">
		<table class="table table-striped table-hover">
			<thead class="table-dark">
				<tr>
					<th scope="col" class="produit-size">ID</th>
					<th scope="col" class="produit-size">Nom</th>
					<th scope="col" class="produit-size">Prenom</th>
					<th scope="col" class="produit-size">E-mail</th>
					<th scope="col" class="produit-size">Ville</th>
					<th scope="col" class="produit-size">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for client in clients %}
					<tr>
						<td class="produit-size">{{client.id}}</td>
						{# !.id car ici c'est la méthode getId() qui est appellé (public function getPrenomClient() ds Entity/Clients.php) #}
						<td class="produit-size">{{client.nomClient}}</td>
						{# !.nomClient au lieu de nom de colonne nom_client car ici c'est la méthode getPrenomClient() qui est appellé (public function getPrenomClient() ds Entity/Clients.php) #}
						<td class="produit-size">{{client.prenomClient}}</td>
						<td class="produit-size">{{client.mailClient}}</td>
						<td class="produit-size">{{client.villeClient}}</td>

						<td>
							<button style="background-color: brown">
								<a href="{{path('app_clients_new')}}" style="text-decoration: none; color: white; ">Ajouter client</a>
							</button>
							<button style="background-color: brown">
								<a href="{{path('app_clients_show', {'id': client.id})}}" style="text-decoration: none; color: white; ">Infos client</a>
							</button>
							<button style="background-color: brown">
								<a href="{{ path('app_clients_edit', {'id': client.id}) }}" style="text-decoration: none; color: white; ">edit</a>
							</button>
						</td>
					</tr>

				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
