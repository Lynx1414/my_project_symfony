{{ form_start(form) }}
{% form_theme form 'tailwind_2_layout.html.twig' %}

    <div class="d-flex justify-content-between w-50 mx-auto ">
        {{ form_row(form.nom_produit,{'attr':{'class': 'form-control'}}) }}
        {{ form_row(form.prix_produit,{'attr':{'class': 'form-control'}}) }}
    </div>

    <div class="d-flex flex-column justify-content-md-center align-items-left w-50 mx-auto mt-3">
        {{ form_row(form.description_produit,{'attr':{'class': 'form-control mb-3'}}) }}
        {{ form_row(form.image_produit,{'attr':{'class': 'form-control mb-3'}}) }}
        {{ form_row(form.stock_produit,{'attr': {'class': 'form-check-input me-3 mb-3'}}) }}
        {{ form_row(form.date_depot_produit,{'attr':{'class': 'form-control mb-3'}}) }}
        {{ form_row(form.enseignes,{'attr':{'class': 'form-control mb-3'}}) }}
        {{ form_row(form.category,{'attr':{'class': 'form-control mb-3'}}) }}
        {{ form_row(form.user,{'attr':{'class': 'form-control mb-3'}}) }}
        {{ form_row(form.reference,{'attr':{'class': 'form-control mb-3'}}) }}
    </div>

    <div class="d-flex justify-content-center ">
    <button class="btn btn-info text-white">{{ button_label|default('Ajouter') }}</button>
    </div>

{{ form_end(form) }}